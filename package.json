{
  "name": "nts",
  "version": "1.0.2",
  "description": "A simple note taking app",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "node scripts/build.js",
    "dist": "npm run build && electron-builder",
    "dev": "node scripts/build.js --watch",
    "typecheck": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lyfthora/nts.git"
  },
  "keywords": [],
  "author": "lyfthora",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/lyfthora/nts/issues"
  },
  "homepage": "https://github.com/lyfthora/nts#readme",
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "electron": "^39.1.2",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.23.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@codemirror/commands": "^6.10.0",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/language": "^6.11.3",
    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.39.3",
    "@electron/remote": "^2.1.3",
    "@lezer/highlight": "^1.2.3",
    "@lezer/markdown": "^1.6.1",
    "codemirror": "^6.0.2",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.6.2",
    "framer-motion": "^12.23.25",
    "marked": "^17.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.10.1"
  },
  "build": {
    "appId": "com.lyfthora.nts",
    "productName": "NTS",
    "artifactName": "${productName}.Setup.${version}.${ext}",
    "publish": [
      {
        "provider": "github",
        "owner": "lyfthora",
        "repo": "nts"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "src/renderer/assets/icons/logoo.png"
    },
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "package.json"
    ]
  }
}
